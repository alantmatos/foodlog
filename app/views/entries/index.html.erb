<% content_for :title do %>
Foodlog
<% end %>

<div class='columns is-mobile is-centered mt-5'>
 <%= link_to "Create new Entry", new_entry_path, class:'button is-primary is-outlined' %>    

</div>

<div id="entries" class='columns mt-6 is-centered'>
  <% @entries.each do |entry| %>
   <div class='column is-one-third'>
      <div class='card'>      
      <header class='card-header'>
      <p class='card-header-title'>
      <%= entry.meal_types %>
      </p>
      </header>

 <div class="card-content">
<div class="content">
<p><span class="has-text-weight-bold"> <%= entry.calories %></span> calories</p>
<p><span class="has-text-weight-bold"><%= entry.proteins %></span> grams of protein</p>
<p><span class="has-text-weight-bold"> <%= entry.carbohydrates %></span> grams of carbohydrates</p>
<p><span class="has-text-weight-bold"> <%= entry.fats %></span> grams of fat</p>
<p class="italic">Logged <%= time_ago_in_words(entry.created_at)%></p>
</div>
</div> 

<div class='card-footer'>
  <%= link_to "Edit", edit_entry_path(entry), class: 'card-footer-item button is-warning is-light is-outlined' %> 
  <%= link_to "Show", entry, class: 'card-footer-item button is-success is-light is-outlined' %>
  <%= link_to "Destroy", entry, method: :delete, data:{ turbo_method: :delete}, class: 'card-footer-item button is-danger is-light is-outlined'  %>
</div>
</div>
</div>
  <% end %>
</div>


